<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <Spinner
        android:id="@+id/spKinds"
        android:layout_width="273dp"
        android:layout_height="36dp" />

    <EditText
        android:id="@+id/etBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="브랜드명"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#999999"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:hint="상품명"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            android:hint="용량"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  개봉일" />

            <EditText
                android:id="@+id/edOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="false"
                android:hint="개봉일"
                android:inputType="date"
                android:maxLength="10"
                android:maxLines="1"
                android:selectAllOnFocus="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="만료일" />

            <EditText
                android:id="@+id/edExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="만료일"
                android:inputType="date"
                android:maxLength="10"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용 권장 기한 :" />

    <TextView
        android:id="@+id/tvBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="바코드 식별 코드" />
    <TextView
        android:id="@+id/tvChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="사용 기간 만료 원하는 시간" />


    <CheckBox
        android:id="@+id/cbWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="한 주전 알림"
        />

    <CheckBox
        android:id="@+id/cbMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="한 달전 알림" />

    <EditText
        android:id="@+id/etcontent"
        android:inputType="textMultiLine"
        android:lines="5"
        android:minLines="3"
        android:maxLines="10"
        android:hint="추가 정보를 입력하세요"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:textSize="14sp"
        />

</LinearLayout>
